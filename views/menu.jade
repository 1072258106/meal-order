extends template-page

block content
    if menuList.length > 0
        h5 你的餐单列表:
            span.pull-right
                a(href='/menu/add') 创建餐单
        table(class='table table-hover table-striped table-responsive')
            thead
                tr
                    th 餐单名
                    th 操作
            tbody
                each menu in menuList
                    tr
                        td=menu.menuName
                        td(_id=menu._id)
                            a.edit-btn(href='javascript:;') 编辑
                            | &nbsp;&nbsp;
                            a.del-btn(href='javascript:;') 删除
    else
        .jumbotron
            span(class='glyphicon glyphicon-exclamation-sign text-danger')
            | &nbsp;你还没有任何餐单，
            a(href='/menu/add') 创建新餐单

block scripts
    script(type='text/javascript' src='/lib/jquery/dist/jquery.min.js')
    script(type='text/javascript' src='/lib/bootstrap/dist/js/bootstrap.min.js')
    script(type='text/javascript' src='/javascripts/menu.js')
