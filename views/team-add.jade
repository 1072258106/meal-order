extends template-page

block content
    ul(class='breadcrumb')
        li
            a(href='/team') 团队
        li 创建团队

    .col-sm-12.col-xs-12.well
        form.form-horizontal#add-team-form
            fieldset
                legend 新团队
                .form-group
                    label.col-sm-2.col-xs-3.control-label(for='team-name') 团队名
                    .col-sm-10.col-xs-9
                        input#team-name(class='form-control' name='teamName' type='text' placeholder='团队名')
                .form-group
                    label.col-sm-2.col-xs-3.control-label(for='team-desc') 团队说明
                    .col-sm-10.col-xs-9
                        textarea#team-desc(class='form-control' rows='3' style='resize:none;' name='teamDesc' type='text' placeholder='团队说明')
                .form-group
                    label.col-sm-2.col-xs-3.control-label 成员
                    .col-sm-10.col-xs-9
                        //input#team-member(class='form-control' name='members' type='text' placeholder='请搜索添加新成员')
                        button.btn.btn-primary.btn-sm(type='button' data-toggle='modal' data-target='#member-modal') 添加新成员
                .form-group
                    .col-sm-10.col-xs-9.col-sm-offset-2.col-xs-offset-3
                        label(style='padding: 5px;margin-right: 5px;border-radius:5px;background:#a9e8ff')= username
                        label(style='padding: 5px;margin-right: 5px;border-radius:5px;background:#a9e8ff')
                            | corona&nbsp;
                            span(class='glyphicon glyphicon-remove text-danger' role='button')
                .form-group
                    label.col-sm-2.col-xs-3.control-label 菜单
                    .col-sm-10.col-xs-9
                        //input#team-menu(class='form-control' name='menus' type='text' placeholder='请添加关联菜单')
                        button.btn.btn-primary.btn-sm(type='button' data-toggle='modal' data-target='#menu-modal') 选择菜单
                .form-group
                    .col-sm-10.col-xs-9.col-sm-offset-2.col-xs-offset-3#selectedMenuList
                        //| 海底捞、鱼非鱼、避风塘

                .form-group
                    .col-xs-12.col-sm-12.text-center
                        button(type='button' id='submit-btn' class='btn btn-primary btn-sm' data-loading-text="加载中..." autocomplete="off") 提交
                        | &nbsp;&nbsp;
                        button(type='reset' id='reset-btn' class='btn btn-default btn-sm' data-loading-text="加载中..." autocomplete="off") 重置

    .modal.fade.in(tabindex='-1' id='member-modal' role='dialog' aria-hidden='true' data-backdrop='static')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') x
                    h4.modal-title 添加成员
                .modal-body.col-sm-12.col-xs-12
                    .col-sm-10.col-xs-10.col-sm-offset-1.col-xs-offset-1
                        input.form-control(type='text' id='team-keyword' placeholder='请输入用户名进行查询')
                        ul.list-group#member-list(style='max-height:350px;overflow-y:auto;margin-top:10px;')
