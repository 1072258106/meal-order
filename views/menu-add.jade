doctype html
html(ng-app='FoodMenu')
    head
        title= title
        meta(name='viewport', content='width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
        link(rel='icon', type='image/ico', href='favicon.ico')
        link(rel='shortcut icon', type='image/ico', href='favicon.ico')
        link(rel='bookmark', type='image/ico', href='/favicon.ico')
        link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/eden.css')
    body

        include templates/page-header

        div(class='container' style='margin-top: 42px;' ng-controller='AddMenuCtrl')
            div(class='page-header')
                div(class='row')
                    div(class='col-sm-12 col-xs-12')
                        ul(class='breadcrumb')
                            li
                                a(href='/menu') 菜单
                            li 创建菜单

                        .col-sm-12.col-xs-12.well
                            form.form-horizontal
                                fieldset
                                    legend 菜单列表
                                    #dish-list
                                        .form-group
                                            .col-xs-12.col-sm-12.text-right
                                                button.btn.btn-info.btn-sm(type='button' add-dish-line ng-click='addDishLine()')
                                                    span.glyphicon.glyphicon-plus-sign
                                        .form-group
                                            .col-xs-5.col-sm-5
                                                input(class='form-control' name='dishName' type='text' placeholder='菜名')
                                            .col-xs-5.col-sm-5
                                                input(class='form-control' name='price' type='text' placeholder='单价')

                                    .form-group
                                        .col-xs-12.col-sm-12.text-center
                                            button(type='submit' class='btn btn-primary btn-sm') 提交
                                            | &nbsp;&nbsp;
                                            button(type='reset' class='btn btn-default btn-sm') 重置


            include templates/page-footer

        script(type='text/javascript' src='/lib/jquery/dist/jquery.min.js')
        script(type='text/javascript' src='/lib/bootstrap/dist/js/bootstrap.min.js')
        script(type='text/javascript' src='/lib/angular.js')
        script(type='text/javascript' src='/javascripts/menu.js')