extends template-page

block styles
    link(rel='stylesheet', href='/stylesheets/meal.css')

block content
    ul(class='breadcrumb')
        li
            a(href='/home') 主页
        li 订餐

    h5
        =teamName
        | &nbsp;/&nbsp;
        =menuName

    if dishes.length > 0
        each dish in dishes
            .col-lg-3.col-sm-6.col-xs-6
                .well
                    h6
                        =dish.dishName
                        span.text-danger （￥
                            =dish.price
                            | ）
                    .text-right(dish-id=dish._id dish-name=dish.dishName dish-price=dish.price)
                        button.btn.btn-danger.btn-sm.add-dish-btn 加入菜单

    .affix.col-lg-4.col-sm-6.col-xs-12.cart-container
        .cart-basket
            div.basket-banner
                a.basket-shopping(href='#')
                    span.glyphicon.glyphicon-shopping-cart
                div(style='height: 30px;')
                    | 购物车
                    a [清空]
            div.dish-line
                div.dish-name 麦辣鸡腿汉堡中套餐
                div.ope-btns
                    button.minus-btn -
                    input.selected-no(type='text')
                    button.plus-btn +
                div.total-price ¥64,438
            div.dish-line
                div.dish-name 麦辣鸡腿汉堡中套餐
                div.ope-btns
                    button.minus-btn -
                    input.selected-no(type='text')
                    button.plus-btn +
                div.total-price ¥64,438

        div.basket-info
            div.basket-dishes
                span.glyphicon.glyphicon-shopping-cart
                span.badge 2
            span.currency-type ￥
            span(style='font-size:20px;') 222
            button.btn.btn-success.btn-block#submit-meal-btn 提交


block scripts
    script(type='text/javascript' src='/lib/jquery/dist/jquery.min.js')
    script(type='text/javascript' src='/lib/bootstrap/dist/js/bootstrap.min.js')
    script(type='text/javascript' src='/lib/socket.io.js')
    script(type='text/javascript' src='/javascripts/meal.js')